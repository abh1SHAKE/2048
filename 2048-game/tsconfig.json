{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src", "tests", "**/*.test.ts", "**/*.test.tsx"]
}
